{
  "private": true,
  "author": "azu <azuciao@gmail.com>",
  "license": "MIT",
  "files": [
    "bin/",
    "lib/",
    "src/"
  ],
  "name": "faao",
  "description": "Faao is a GitHub Issue/Pull Request client on Electron/Browser.",
  "version": "1.0.0",
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "productName": "Faao",
    "appId": "info.efcl.faao",
    "asar": true,
    "npmRebuild": false,
    "files": [
      "main-src/**/*",
      "build/**/*",
      "tsconfig.json",
      "tsconfig.electron.json",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "deb"
      ]
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  },
  "scripts": {
    "test": "npm-run-all test:* lint",
    "test:unit": "react-scripts test --env=node",
    "updateSnapshot": "react-scripts test --updateSnapshot --env=node",
    "lint": "npm-run-all --parallel lint:*",
    "lint:depcruise": "depcruise --validate .dependency-cruiser.json src",
    "prepublishOnly": "npm run --if-present build",
    "prettier": "prettier \"src/**/*.{ts,tsx,css}\" --write --print-width 100 --tab-width 4",
    "start": "cross-env BROWSER=none react-scripts start",
    "electron": "wait-on http://localhost:3000 && cross-env FAAO_URL=http://localhost:3000/ electron public/electron.js",
    "watch:main": "tsc -p ./tsconfig.electron.json",
    "build:docs": "almin-usecase-map-generator \"./src/use-case/**/*UseCase.ts\" --output build/meta/use-case.svg",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "clean": "rimraf public/build dist && mkdirp public/build",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "npm run build",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "release": "npm run build && electron-builder"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.0",
    "@types/electron": "^1.6.10",
    "@types/github-url-to-object": "^4.0.0",
    "@types/glob": "^5.0.30",
    "@types/jest": "^24.0.1",
    "@types/lodash": "^4.6.4",
    "@types/node": "^11.9.0",
    "almin-usecase-map-generator": "^1.0.2",
    "cross-env": "^5.2.0",
    "dependency-cruiser": "^2.2.3",
    "electron": "5.0.0",
    "electron-builder": "^20.39.0",
    "electron-packager": "^13.1.1",
    "glob": "^7.1.2",
    "husky": "^1.3.1",
    "json-loader": "^0.5.4",
    "lint-staged": "^8.1.3",
    "minimatch": "^3.0.4",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "react-scripts": "^2.1.4",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "typemoq": "^1.7.0",
    "wait-on": "^3.2.0"
  },
  "dependencies": {
    "@immutable-array/prototype": "^1.0.4",
    "@types/combokeys": "^2.4.5",
    "@types/lru-cache": "^4.1.1",
    "@types/moment": "^2.13.0",
    "@types/prop-types": "^15.5.8",
    "@types/react": "16.8.2",
    "@types/react-color": "^2.13.3",
    "@types/react-dom": "16.8.0",
    "@types/remove-markdown": "^0.1.1",
    "@types/url-join": "^0.8.2",
    "@uifabric/icons": "^6.5.1",
    "almin": "^0.18.1",
    "almin-logger": "^6.2.3",
    "almin-react-container": "^0.7.3",
    "base64-arraybuffer": "^0.2.0",
    "classnames": "^2.2.6",
    "codemirror": "^5.27.2",
    "combokeys": "^2.4.6",
    "debug": "^2.6.9",
    "electron-context-menu": "^0.12.1",
    "electron-default-menu": "^1.0.1",
    "execall": "^1.0.0",
    "filterable": "^2.0.1",
    "fromfrom": "^1.2.0",
    "github-api": "^3.0.0",
    "github-url-to-object": "^4.0.4",
    "graphql-request": "^1.8.2",
    "is-electron": "^2.0.0",
    "localforage": "^1.5.0",
    "localforage-memoryStorageDriver": "^0.9.2",
    "lodash": "^4.17.11",
    "lru-cache": "^5.1.1",
    "lru-map-like": "^2.0.0",
    "map-like": "^2.0.0",
    "moment": "^2.19.3",
    "octokat": "^0.8.0",
    "office-ui-fabric-react": "~6.176.0",
    "parse-github-event": "^1.0.2",
    "react": "^16.8.1",
    "react-codemirror": "git://github.com/skidding/react-codemirror.git#106-fix-update",
    "react-color": "^2.17.0",
    "react-dom": "^16.8.1",
    "react-octicons": "^0.1.0",
    "react-topbar-progress-indicator": "^1.0.0",
    "remove-markdown": "^0.3.0",
    "request-idle-polyfill": "^1.0.1",
    "shallow-equal-object": "^1.1.1",
    "suitcss-classnames": "^1.1.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5",
    "ulid": "^2.3.0",
    "url-join": "^2.0.2",
    "whatwg-fetch": "^2.0.3"
  },
  "resolutions": {
    "@types/react": "16.8.2",
    "@types/react-dom": "16.8.0"
  },
  "jest": {},
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write --print-width 100 --tab-width 4",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "post-commit": "git reset",
      "pre-commit": "lint-staged"
    }
  },
  "snyk": true
}
