{
  "directories": {
    "test": "test"
  },
  "author": "azu",
  "license": "MIT",
  "files": [
    "bin/",
    "lib/",
    "src/"
  ],
  "name": "faao",
  "description": "Faao is a GitHub issue client like jasper.",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "prepublishOnly": "npm run --if-present build",
    "precommit": "lint-staged",
    "prettier": "prettier \"src/**/*.{ts,tsx,css}\" --write --print-width 100 --tab-width 4",
    "start": "npm-run-all clean --parallel watch:css server",
    "start:electron": "npm-run-all clean --parallel watch:electron:js watch:css electron",
    "electron": "electron electron.js",
    "server": "cross-env NODE_ENV=development RUNTIME_TARGET=browser webpack-dev-server --hot --content-base ./public --open",
    "build:browser:js": "cross-env NODE_ENV=production RUNTIME_TARGET=browser webpack --progress -p",
    "build:electron:js": "cross-env NODE_ENV=production RUNTIME_TARGET=electron webpack --progress -p",
    "build:css": "postcss --config postcss.config.js src/index.css -o public/build/build.css",
    "build": "npm-run-all clean --parallel build:*",
    "watch:browser:js": "cross-env NODE_ENV=development RUNTIME_TARGET=browser webpack --watch",
    "watch:electron:js": "cross-env NODE_ENV=development RUNTIME_TARGET=electron webpack --watch",
    "watch:css": "chokidar --initial 'src/**/*.css' -c 'npm run build:css'",
    "watch": "npm-run-all clean --parallel watch:*",
    "clean": "rimraf public/build && mkdirp public/build"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.0",
    "@types/electron": "^1.6.10",
    "@types/jest": "^19.2.4",
    "@types/node": "^7.0.31",
    "autoprefixer": "^7.1.1",
    "awesome-typescript-loader": "^3.1.3",
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-jsdoc-to-assert": "^4.0.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.24.1",
    "chokidar-cli": "^1.2.0",
    "cross-env": "^5.0.1",
    "electron": "1.7.2",
    "espower-typescript": "^8.0.0",
    "husky": "^0.13.4",
    "jest": "^20.0.4",
    "json-loader": "^0.5.4",
    "lint-staged": "^3.6.1",
    "localforage-memoryStorageDriver": "^0.9.2",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.0.2",
    "postcss-calc": "^6.0.0",
    "postcss-cli": "^4.1.0",
    "postcss-custom-media": "^6.0.0",
    "postcss-custom-properties": "^6.0.1",
    "postcss-easy-import": "^2.1.0",
    "postcss-normalize": "^3.0.0",
    "postcss-reporter": "^4.0.0",
    "power-assert": "^1.4.4",
    "rimraf": "^2.6.1",
    "ts-jest": "^20.0.6",
    "typemoq": "^1.7.0",
    "typescript": "^2.3.4",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-dotenv-plugin": "^2.0.0"
  },
  "dependencies": {
    "@types/combokeys": "^2.4.5",
    "@types/lodash.sortby": "^4.7.2",
    "@types/lodash.throttle": "^4.1.2",
    "@types/lodash.uniqby": "^4.7.2",
    "@types/moment": "^2.13.0",
    "@types/prop-types": "^15.5.1",
    "@types/react": "^15.0.28",
    "@types/react-color": "^2.11.2",
    "@types/react-dom": "^15.5.0",
    "@types/url-join": "^0.8.2",
    "almin": "0.13.2",
    "almin-logger": "^4.0.3",
    "almin-react-container": "0.3.2",
    "classnames": "^2.2.5",
    "codemirror": "^5.26.0",
    "combokeys": "^2.4.6",
    "debug": "^2.6.8",
    "electron-context-menu": "^0.9.1",
    "electron-navigation": "^1.5.3",
    "execall": "^1.0.0",
    "filterable": "^2.0.1",
    "github-api": "^3.0.0",
    "github-url-to-object": "^4.0.0",
    "localforage": "^1.5.0",
    "lodash.sortby": "^4.7.0",
    "lodash.throttle": "^4.1.1",
    "lodash.uniqby": "^4.7.0",
    "map-like": "1.1.3",
    "moment": "^2.18.1",
    "octokat": "^0.8",
    "office-ui-fabric-react": "^4.7.0",
    "prettier": "^1.4.4",
    "react": "^15.6.1",
    "react-codemirror": "git://github.com/skidding/react-codemirror.git#106-fix-update",
    "react-color": "^2.12.1",
    "react-dom": "^15.6.1",
    "react-octicons": "^0.1.0",
    "shallow-equal-object": "^1.0.1",
    "suitcss-classnames": "^1.1.0",
    "ulid": "^0.1.0",
    "url-join": "^2.0.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "node_modules",
      "lib"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,css}": [
      "prettier --write --print-width 100 --tab-width 4",
      "git add"
    ]
  }
}
